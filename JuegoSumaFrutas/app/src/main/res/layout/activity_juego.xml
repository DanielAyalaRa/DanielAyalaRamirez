<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Juego">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="@color/ic_launcher_background"
        card_view:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:cardCornerRadius="15dp">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="right"
            card_view:cardElevation="6dp"
            android:backgroundTint="@color/colorCrema"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@color/white"
                android:src="@drawable/manzana"
                android:layout_gravity="center"
                android:id="@+id/avatar"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Jugador: "
            android:id="@+id/txtJugador"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Puntos: "
            android:id="@+id/txtPuntos"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:padding="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Vidas: "
            android:id="@+id/txtVidas"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/vida"
            android:id="@+id/vida1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/vida"
            android:id="@+id/vida2"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/vida"
            android:id="@+id/vida3"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/purple_500"
        android:orientation="vertical"/>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorCrema"
        android:layout_marginBottom="20dp">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="top|left"
            card_view:cardElevation="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/uno"
                android:id="@+id/icono1"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="top|center"
            card_view:cardElevation="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:src="@drawable/suma"
                android:id="@+id/operador"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="top|right"
            card_view:cardElevation="6dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="150dp"
            card_view:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dos"
                android:id="@+id/icono2"/>
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:backgroundTint="@color/ic_launcher_background"
        card_view:cardElevation="6dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:hint="Respuesta"
                android:padding="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtRespuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Comprobar"
                android:id="@+id/comprobar"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>